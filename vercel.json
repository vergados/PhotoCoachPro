{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/.next",
  "framework": "nextjs",
  "functions": {
    "api/index.py": {
      "runtime": "python3.12",
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/v1/:path*", "destination": "/api/index.py" },
    { "source": "/health",        "destination": "/api/index.py" }
  ]
}

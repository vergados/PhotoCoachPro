{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/v1/(.*)", "dest": "/api/index.py" },
    { "src": "/health",      "dest": "/api/index.py" }
  ]
}
